root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8

[*.rb]
indent_size = 2

[Vagrantfile]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 8

[*.pp]
indent_size = 2
